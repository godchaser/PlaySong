# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

# Songs
GET         /songs                   controllers.Application.songs()
GET         /getsongs                controllers.Application.getSongs()
GET         /songtable               controllers.Application.songTable()
POST        /songs                   controllers.Application.newSong()
POST        /songs/:id/delete        controllers.Application.deleteSong(id: Long)
GET         /songs/:id               controllers.Application.getSong(id: Long)
GET         /songjson/:id            controllers.Application.getSongJson(id: Long)

GET         /init                    controllers.Application.init()

GET         /list                    controllers.Application.list()
GET         /admin                   controllers.Application.admin()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

    